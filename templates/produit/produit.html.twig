{% extends 'base.html.twig' %}

{% block title %}
	{{produit.name}}
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">{{'nav.panier'|trans}}</a>
		<a class="navbar-brand" href="/produit">{{'nav.produit'|trans}}</a>
	</nav>

	<div class="example-wrapper">
		<table class="table table-striped">
			<thead>

				<th scope="col">{{produit.name}}</th>
				<th>
					{% if produit.picture is not null %}
						<img
						src="{{ asset('/uploads/'~ produit.picture)}}" style: width="100px">
					{# ~ permet de cocatener #}
					{% endif %}
				</th>
				<th scope="col">{{produit.quantity}}</th>
				<th scope="col">{{produit.price}}
					â‚¬</th>
			</thead>
		</table>
		<h2>
			Modifier le panier
		</h2>
		{{ form(form_panier) }}
			<p>
				<a href="{{path('produit_delete', {'id':produit.id})}}">
					Supprimer
				</a>
			</p>
		</div>
	{% endblock %}
