{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">{{'nav.panier'|trans}}</a>
		<a class="navbar-brand" href="/produit">{{'nav.produit'|trans}}</a>
	</nav>

	<div class="example-wrapper">

		<h1>
			{{ 'produit.titre'|trans}}✅
		</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">{{'produit.picture'|trans}}</th>
					<th scope="col">{{'produit.name'|trans}}
					</th>
					<th scope="col">{{'produit.quantity'|trans}}
					</th>
					<th scope="col">{{'produit.price'|trans}}
					</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td><img src="{{ asset('/uploads/'~ produit.picture) }}" style: width="100px">

						</td>
						<td>
							<a href="{{ path('un_produit' , {'id':produit.id}) }}">
								{{produit.name}}
							</a>
						</td>
						<td>
							{{produit.quantity}}
						</td>
						<td>
							{{produit.price}}
							€</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<h2>{{ 'produit.titreForm'|trans}}</h2>

		{{ form(form_ajout)}}
		</div>
	{% endblock %}
